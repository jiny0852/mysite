<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="guestbook">

<!-- 쿼리문작성 -->


	<!-- guestList 전체 가져오기 -->
	<select id="selectList" resultType="com.javaex.vo.GuestbookVo">

		<![CDATA[

			select 	no, 
		    	    name, 
		            password, 
		            content,
		            reg_date regDate
		    from guestbook 

		]]>

	</select>
	
